<!DOCTYPE html>
<html>
<head>
  <title>Selfie CV</title>
  <link rel="icon" href="<%= image_url('fav.ico') %>" type="image/vnd.microsoft.icon" />
  <link rel="shortcut icon" href="<%= image_url('fav.ico') %>" /> 
  <%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
  <%= stylesheet_link_tag    'admin', media: 'all' %>
  <%= javascript_include_tag 'admin' %>  
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body>

  <nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to image_tag('logo.png'), admin_root_path, class: 'logo' %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">



          <li><%= link_to "Dashboard", admin_root_path %></li>
          <li><%= link_to "Device", admin_devices_path %></li>
          <li><%= link_to "User", admin_users_path %></li>
          <li><%= link_to "Company", admin_companies_path %></li>
          <li><%= link_to "Country", admin_company_stocks_path %></li>
          <li><%= link_to "Course", admin_courses_path %></li>
          <!-- <li><%= link_to "Graph", admin_graphs_path %></li> -->
          <li><%= link_to "Group", admin_groups_path %></li>          
          <li><%= link_to "Industry", admin_industries_path %></li>          
          <li><%= link_to "Market IQ", admin_marketiqs_path %></li>          
          <li><%= link_to "QuickMessage", admin_quick_messages_path %></li>
          <li><%= link_to "Spe.", admin_specializations_path %></li>          
          <li><%= link_to "Video Upload", admin_video_uploads_path %></li>
          <li><%= link_to "Whizquiz", admin_whizquizzes_path %></li>

          

          <li class="dropdown" style="margin:15px;">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">%
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li><%= link_to "Jobseeker", admin_user_percentages_path('ptype' => 'Jobseeker') %></li>
              <li><%= link_to "Student", admin_user_percentages_path('ptype' => 'Student') %></li>
              <li><%= link_to "Company", admin_user_percentages_path('ptype' => 'Company') %></li>
              <li><%= link_to "Faculty", admin_user_percentages_path('ptype' => 'Faculty') %></li>
              <li><%= link_to "Over All %", admin_user_percentages_path('ptype' => 'site') %></li>
              <li class="divider"></li>
              <li><%= link_to "Setting", admin_settings_path %></li>
            </ul>
          </li>

          
        </ul>        
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, 'data-confirm' => 'Are you sure?' %></li>
        </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div id="flash_messages" class="container-fluid">
    <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= notice %>
    </div>
    <% end %>
    <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= alert %>
    </div>
    <% end %>
  </div>

  <div class="container-fluid">
    <%= yield %>
  </div>
  <%= yield :scripts %>
</body>
</html>
