<% elsif @user.role == 'Faculty' %>

<h4 class="text_decoration"><b> Faculty Information </b></h4>
<p><strong>First Name:</strong><%= @user.first_name %></p>
<p><strong>Work Type:</strong><%= @user.faculty_work_with_type %></p>
<p><strong>University Name:</strong><%= @user.faculty_uni_name %></p>
<p><strong>Subject:</strong><%= @user.faculty_subject %></p>
<p><strong>Designation:</strong><%= @user.faculty_designation %></p>
<p><strong>Join From:</strong><%= @user.faculty_join_from %></p>

<% else %>

<p><strong>First Name:</strong><%= @user.first_name %></p>

<% end %>

