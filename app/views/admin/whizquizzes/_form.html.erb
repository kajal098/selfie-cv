<%= simple_form_for [:admin, @whizquiz], html: { class: 'form-horizontal' } do |f| %>
  
  <%= f.input :question, label: "Question" %>
  <%= f.input :answer, label: "Answer" %>
  <div class="form-group clearfix">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-primary btn-sm">Save</button> <%= link_to "Back", admin_whizquizzes_path, class: "btn btn-default btn-sm" %>
    </div>
  </div>
<% end %>