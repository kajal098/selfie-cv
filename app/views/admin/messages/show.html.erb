<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">        
        <h3 class="panel-title" style="color: #000000"><b><%= @message.role.capitalize %></b></h3>
      </div>
      <div class="panel-body">


<p>
  <strong>text:</strong>
  <%= @message.text %>
</p>
<p>
  <strong>Created At:</strong>
  <%= @message.created_at.to_date %>
</p>
<p>
  <strong>Updated At:</strong>
  <%= @message.updated_at.to_date %>
</p>


<div class="form-group clearfix">
    <div class="col-sm-offset-3 col-sm-9">
      <%= link_to 'Edit', edit_admin_message_path(@message), class: "btn btn-primary btn-sm" %> <%= link_to "Back", admin_messages_path, class: "btn btn-default btn-sm" %>
    </div>
  </div>
      </div>
    </div>
  </div>
</div>