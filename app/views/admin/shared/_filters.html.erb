<%= form_for @report, url: request.path, :html => {:method => :get, class: 'filters'} do |f| %>
  <% @report.filters.each do |filter| %>
  <div class="form-group">
    <div class="control-label"><%= f.datagrid_label filter %></div>
    <div class="controls"><%= f.datagrid_filter filter, class: 'form-control input-sm' %></div>
  </div>
  <% end %>      
  <div class="form-actions">
    <%= f.submit "Filter", class: 'btn btn-primary btn-sm' %>
    <%= link_to "Resetten", request.path, class: 'btn btn-default btn-sm' %>
  </div>      
<% end %>